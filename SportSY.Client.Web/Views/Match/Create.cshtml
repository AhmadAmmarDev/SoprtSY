
@using SportSY.Core.Models
<textarea id="selectedTeamMatches"></textarea>

<div id="createMatchesMainContainer">
    <div id="createTeamsFieldsContainer">

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Notes">
        </div>
        <div class="form-group">
            <input class="input-group date" data-provide="datepicker">

        </div>

        <div class="form-group">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Activity
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Place
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-dark" placeholder="Date">Request</button>
        </div>
    </div>

    <ul id="match-teams-list">
        @{
            <p>Teams list</p>
            var teams = ViewBag.Teams;
            foreach (Team team in teams)
            {
                <li data-team-id="@team.ID">
                    <div class="row bg-white align-items-center ml-0 mr-0 py-3 match-entry team-match-list-item">
                        <div class="col-sm-2">
                            <div class="text-center text-lg-left">
                                <div class="d-inline d-lg-inline-flex align-items-center">
                                    <div class="image img-circle text-center mb-3">
                                        <img src="~/images/teamwork.png" alt="Image" class="img-fluid">
                                    </div>
                                    <div class="text">
                                        <label class="form-check-label">@team.EnglishName</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>

            }
        }
    </ul>
</div>

